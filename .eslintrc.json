{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["plugin:react/recommended", "standard"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "quotes": [1, "double", "avoid-escape"],
    "space-before-function-paren": ["error", "never"],
    "indent": "off",
    "react/prop-types": "off",
    "multiline-ternary": 0,
    "no-console": 2
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
